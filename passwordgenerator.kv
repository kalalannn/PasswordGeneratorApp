<PasswordManagerWidget>
	Button:
		text: 'I am here'

<PasswordGeneratorWidget>
	orientation: 'vertical'
	ConfigurationWidget:
		id: config
		size_hint: (1, .35)
	OutputWidget:
		id: output
		size_hint: (1, .65)

<SettingsWidget>
	Button:
		text: 'Settings'


<MenuWidget@BoxLayout>
	id: box
	orientation: 'horizontal'
	spacing: 1
	rows: 3
	Button:
		text: 'Generator'
		on_press: app.root.next_state('PasswordGeneratorWidget')
	Button:
		text: 'Password Manager'
		on_press: app.root.next_state('PasswordManagerWidget')
	Button:
		text: 'Settings'
		on_press: app.root.next_state('SettingsWidget')

<CheckBoxWidget@BoxLayout>
	orientation: 'horizontal'
	size: (180, 50)
	size_hint: (None, None)
	text: ''
	CheckBox:
		size:(50, 30)
	Label:
		text_size: (130, 30)
		font_size: '16sp'
		text: root.text
		halign: 'left'
		valign: 'middle'

<LabelInputWidget@BoxLayout>
	orientation: 'horizontal'
	size: (200, 50)
	size_hint: (None, None)
	text: 'Count: '
	Label:
		font_size: '16sp'
		size_hint: (.4, .7)
		text: root.text
		halign: 'right'
		valign: 'middle'
	TextInput:
		multiline: False
		size_hint: (.6, .7)
	
<ConfigurationWidget@BoxLayout>
	orientation: 'vertical'
	CheckBoxWidget:
		text: 'UPPERCASE(A-Z)'
	CheckBoxWidget:
		text: 'Numbers(0-9)'
	CheckBoxWidget:
		text: "Separators{'-','_'}"
	BoxLayout:
		orientation: 'horizontal'
		AnchorLayout:
			anchor_x: 'left'
			LabelInputWidget:
		AnchorLayout:
			anchor_x: 'right'
			Button:
				size_hint: (0.4, 0.7)
				text: 'Generate'
<OutputWidget@BoxLayout>
	Button:
		text: 'kok4os'

RootWidget:
	id: box
	orientation: 'vertical'
	padding: [2, 1, 2, 0]
	spacing: 3
	rows: 3
	
	MenuWidget:
		id: menu
		size_hint: (1, .1)
	PasswordGeneratorWidget:
		id: widg
		size_hint: (1, .9)
