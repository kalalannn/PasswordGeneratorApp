<PasswordManagerWidget>
	Button:
		text: 'I am here'


<SettingsWidget>
	Button:
		text: 'Settings'


<MenuWidget>
	orientation: 'horizontal'
	spacing: 1
	cols: 3
	Button:
		text: 'Generator'
		on_press: app.root.next_state('PasswordGeneratorWidget')
	Button:
		text: 'Password Manager'
		on_press: app.root.next_state('PasswordManagerWidget')
	Button:
		text: 'Settings'
		on_press: app.root.next_state('SettingsWidget')

<CheckBoxWidget@BoxLayout>
	orientation: 'horizontal'
	text: ''
	CheckBox:
		size_hint: (.1, 1)
	Widget:
		size_hint: (.1, 1)
	Label:
		size_hint: (.8, 1)
		font_size: '16sp'
		text_size: root.width, None
		text: root.text
		halign: 'left'
		valign: 'middle'

<LabelInputWidget@BoxLayout>
	orientation: 'horizontal'
	size: (200, 50)
	size_hint: (None, None)
	text: 'Count: '
	Label:
		font_size: '16sp'
		size_hint: (.4, .7)
		text: root.text
		halign: 'right'
		valign: 'middle'
	TextInput:
		multiline: False
		size_hint: (.6, .7)
	
<ConfigurationWidget>
	orientation: 'vertical'
	CheckBoxWidget:
		text: 'UPPERCASE (A-Z)'
	CheckBoxWidget:
		text: 'Numeric (0-9)'
	CheckBoxWidget:
		text: "Separators {'-', '_'}"
	BoxLayout:
		orientation: 'horizontal'
		AnchorLayout:
			anchor_x: 'left'
			LabelInputWidget:
		AnchorLayout:
			anchor_x: 'right'
			Button:
				size_hint: (.4, 1)
				text: 'Generate'
				on_press: app.root.update_output()
RootWidget:
